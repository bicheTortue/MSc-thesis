% Title page
\defbeamertemplate*{title page}{gpmeet}[1][]{
  \vskip0.6cm%
  \begin{beamercolorbox}[wd=12cm,sep=3pt,#1]{title page header}
    \usebeamerfont{title}\textbf{\inserttitle}\par%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=12cm,leftskip=0.2cm,#1]{date}
    \usebeamerfont{date}\textbf{\insertdate}%
  \end{beamercolorbox}
  \vskip1.2cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=0.2cm,#1]{author}
    \usebeamerfont{author}\textbf{\insertauthor}%
  \end{beamercolorbox}
  \vskip1.2cm
  \begin{beamercolorbox}[wd=12cm,leftskip=0.2cm,#1]{institute}
    \usebeamerfont{author}\insertinstitute%
  \end{beamercolorbox}
  \vfill
}

